email.SMTPPass = iikowgooseidziir

# Email "desde" (quien envía)
email.fromEmail = movimpd1976@gmail.com
email.fromName = "Movimiento de la Palabra de Dios"

# Configuración adicional
email.SMTPTimeout = 10
email.mailType = html
email.charset = utf-8
email.newline = "\r\n"